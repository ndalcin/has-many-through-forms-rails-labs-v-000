<%= form_for post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :content %>
  <%= f.text_area :content %>
  <%= f.label :categories, "Categories" %>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  <%= f.label :categories, "or, create a new category" %>
  <%= f.fields_for :categories, post.categories.build do |categories_fields| %>
    <%= categories_fields.text_field :name %>
  <% end %>
  <%= f.submit %>
<% end %>
